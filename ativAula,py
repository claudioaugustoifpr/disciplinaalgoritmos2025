menu = """PIZZARIA BOM LAR\n
1. Pedido
2. Formas de Pagamento
3. Reclamação
4. Falar com o atendende
OPCAO:"""
opcao = int(input(menu))

if(opcao == 1):
    print("\n\n Tudo sobre o Pedido")
    print("------------------------")
    # quero novas opções de pedido
    print("1. realizar pedido")
    print("2. cancelar pedido")
    print("3. consultar pedido")
    print("4. voltar")


    
          
    submenu = """opções do pedido\n
    1. confirmar pedido
    2. cancelar pedido"""
    print(submenu)

elif(opcao == 2):
        print("2. Formas de Pagamento")

elif(opcao == 3):
      print("3. Reclamação")

elif(opcao == 4):
      print("4. falar como o atendente")

else:
      print("Opção Invalida.")



